# Copy this file to .env and fill in values

# Server
SERVER_PORT=8080

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MySQL
DB_URL=jdbc:mysql://localhost:3306/status?useSSL=false&allowPublicKeyRetrieval=true&useUnicode=true&characterEncoding=utf8&serverTimezone=UTC
DB_USERNAME=root
DB_PASSWORD=
DB_DRIVER=com.mysql.cj.jdbc.Driver

# JPA
JPA_HIBERNATE_DDL=update
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=true

# JWT
JWT_SECRET=please-change-this-to-a-256bit-secret________________________________
JWT_ACCESS_EXP_SECONDS=900
JWT_REFRESH_EXP_SECONDS=1209600
JWT_ISSUER=stat-us

# Ingest API key (optional, if set, plugin must send x-api-key header)
INGEST_API_KEY=

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173
